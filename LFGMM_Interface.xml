	<!-- LIST ENTRY TEMPLATE -->
	<Frame name="LFGMM_ListTab_EntryTemplate" virtual="true" inherits="InsetFrameTemplate3">
		<Size x="360" y="50" />

		<Layers>
			<Layer>
				<Texture name="$parentClassIcon" file="Interface\TargetingFrame\UI-Classes-Circles">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT" >
							<Offset x="5" y="-5" />
						</Anchor>
					</Anchors>

					<Size x="11" y="11" />
				</Texture>
				<FontString name="$parentPlayerName" inherits="GameFontNormal">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="18" y="-5" />
						</Anchor>
					</Anchors>
				</FontString>

				<FontString name="$parentMessage" inherits="GameFontHighlightSmall">
					<Anchors>
						<Anchor point="BOTTOMLEFT">
							<Offset x="5" y="5" />
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parentDungeon" inherits="GameFontHighlightSmall">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="5" y="-20" />
						</Anchor>
					</Anchors>

					<Color a="1" r="0" g="1" b="0" />
				</FontString>

				<FontString name="$parentType" inherits="GameFontHighlightSmall">
					<Anchors>
						<Anchor point="RIGHT">
							<Offset x="-10" />
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		
		<Frames>
			<Button name="$parentInfoButton" text="?" inherits="UIPanelButtonTemplate">
				<Anchors>
					<Anchor point="RIGHT">
						<Offset x="-40" />
					</Anchor>
				</Anchors>

				<Size x="25" y="25" />
				
				<Scripts>
					<OnClick>
						LFGMM_ListTab_MessageInfoWindow_Show(self.Message);
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
			
